<div class="row border-bottom mb-4">
  <div class="col-md-6">
    <h1>Team requests</h1>
  </div>
  <div class="col-md-6 text-right">
    <div class="items-actions">
      
    </div>
  </div>
</div>
<% if @user.friend_requests_as_receiver.present? %>
  <ul class="list-group" id="friend-requests-list">
    <% @user.friend_requests_as_receiver.map do |friend_request| %>
      <li class="list-group-item d-flex align-items-center">
        <span class="mr-auto"><%= friend_request.requestor.full_name %></span>
        <button class="btn btn-primary" data-user-id="<%= friend_request.requestor.id %>">Accept</button>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= render partial: 'partials/empty', locals: { message: "You don't have any friend request yet" } %>
<% end %>