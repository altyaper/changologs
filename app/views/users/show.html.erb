<%= render 'partials/header' %>
<div class="changologs-app-container">
  <%= render 'partials/sidebar' %>
  <div class="app-content users-profile">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-sm-12">
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="true">Profile</a>
            <a class="nav-link" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="false">Friends</a>
            <a class="nav-link" id="v-pills-requests-tab" data-toggle="pill" href="#v-pills-requests" role="tab" aria-controls="v-pills-requests" aria-selected="false">Requests</a>
            <a class="nav-link" id="v-pills-api-client-tab" data-toggle="pill" href="#v-pills-api-client" role="tab" aria-controls="v-pills-api-client" aria-selected="false">API Clients</a>
          </div>
        </div>
        <div class="col-lg-9 col-sm-12">
          <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
              <%= render template: 'users/profile' %>
            </div>
            <div class="tab-pane fade" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
              <%= render template: 'users/friends' %>
            </div>
            <div class="tab-pane fade" id="v-pills-requests" role="tabpanel" aria-labelledby="v-pills-requests-tab">
              <%= render template: 'users/friend_requests' %>
            </div>
            <div class="tab-pane fade" id="v-pills-api-client" role="tabpanel" aria-labelledby="v-pills-api-client-tab">
              <%= render template: 'api_clients/new' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
