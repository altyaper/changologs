<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5 border p-4 rounded mt-5">
      <h2>Enter OTP</h2>
      <%= form_tag verify_user_otp_path, method: :post do %>
        <div class="form-group">
          <%= label_tag :otp_attempt, "OTP Code" %><br />
          <%= text_field_tag :otp_attempt, "", class: 'form-control' %>
        </div>
        <div class="actions">
          <%= submit_tag "Verify", class: 'btn btn-primary mt-2' %>
          <%= link_to "Back", root_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>