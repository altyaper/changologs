<div class="row border-bottom mb-4">
  <div class="col-md-6">
    <h1>Friends</h1>
  </div>
  <div class="col-md-6 text-right">
    <div class="items-actions">
      <div class="dropdown">
        <%= link_to 'Add friend', new_friend_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% if @user.friendships.present? %>
  <ul class="list-group">
    <% @user.friendships.map do |friend| %>
      <li class="list-group-item d-flex align-items-center">
        <% if friend.friend_a.profile_picture.attached? %>
          <%= image_tag rails_blob_url(friend.friend_a.profile_picture), class: 'profile-picture mr-2' %>
        <% else %>
          <i class="fa fa-user mr-2"></i>
        <% end %>
        <span class="mr-auto"><%= friend.friend_a.full_name %></span>
        <button class="btn btn-danger">Remove</button>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= render partial: 'partials/empty', locals: { message: "You don't have any friends yet, :(" } %>
<% end %>
