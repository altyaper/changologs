<div class="ml-auto d-flex">
  <%= form_tag logs_search_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
    <%= text_field_tag(:search, params[:search], class: "form-control mr-sm-2", type: "search", placeholder: "Search") %>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  <% end %>
  <div class="dropdown">
  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Boards
  </a>
  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
    <%= link_to 'All boards', boards_path, class: 'dropdown-item' %>
    <%= link_to 'New board', new_board_path, class: 'dropdown-item' %>
  </div>
  </div>
  
  <div class="btn-group">
    <%= link_to profile_path, class: 'btn btn-primary text-white' do %>
      <i class="fa fa-user mr-2"></i>
      <% if current_user.profile_picture.attached? %>
        <%= image_tag current_user.profile_picture.variant(resize_to_limit: [150, 150]) %>
      <% else %>
        <p>No profile picture uploaded.</p>
      <% end %>
      <%= current_user.full_name %>
    <% end %>
    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu">
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
    </div>
  </div>
</div>