<div class='col-md-4 mb-4 position-relative board-wrapper'>
  <div class="position-absolute p-2 text-right board-actions">
    <%= link_to edit_board_path(board), class: "mr-1" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to board_path(board), class: "badge badge-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </div>
  <%= link_to board_path(board) do %>
    <div class='card board-wrapper__board-item'>
      <div class="card-body d-flex justify-content-center align-items-center text-center bg-primary text-white rounded shadow-sm position-relative">
          <h5><%= board.name %></h5>
      </div>
    </div>
  <% end %>
</div>