<%= render 'welcome/header' %>
<div class='container border p-4'>
  <div class='row'>
    <div class='col-md-12'>

      <div class='row'>
        <div class='col-md-6'>
          <h1>Listing logs</h1>
        </div>
        <div class='col-md-6 text-right'>
          <%= link_to 'New log', new_log_path, class: 'btn btn-primary mb-2' %>
          <%= link_to 'Home', root_path, class: 'btn btn-info mb-2' %>
        </div>
      </div>

      
      <table class='table'>
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th>Actions</th>
        </tr>
      
        <% @logs.each do |log| %>
          <tr>
            <td><%= log.title %></td>
            <td><%= log.text %></td>
            <td>
              <%= link_to 'Show', log_path(log) %>
              <%= link_to 'Edit', edit_log_path(log) %>
              <%= link_to 'Destroy', log_path(log),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>