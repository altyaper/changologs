<%= render 'partials/header' %>
<div class='container border p-4'>
  <div class='row'>
    <div class='col-md-12'>

      <div class='row'>
        <div class='col-md-6'>
          <h1>Listing logs</h1>
        </div>
        <div class='col-md-6 text-right'>
          <%= link_to 'New log', new_log_path, class: 'btn btn-primary mb-2' %>
          <%= link_to 'Home', root_path, class: 'btn btn-info mb-2' %>
        </div>
      </div>

      <table class='table'>
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col" class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @logs.each do |log| %>
            <tr>
              <td><%= log.title %></td>
              <td class="text-right">
                <%= link_to log_path(log), class: "badge badge-success" do %>
                  <i class="fa fa-eye"></i>
                <% end %>
                <%= link_to edit_log_path(log), class: "badge badge-primary" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to log_path(log), class: "badge badge-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>