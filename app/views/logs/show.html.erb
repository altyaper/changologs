<%= render 'partials/header' %>
<div class='container border p-4'>
  <div class='row'>
    <div class='col-md-12'>
       <h1><%= @log.title %></h1>
      
      <p>
        <%= sanitize @log.text %>
      </p>

      <div class="mb-4">
        <% @log.tags.each do |tag| %>
          <div class="badge badge-primary"><%= tag.name %></div>
        <% end %>
      </div>

      <%= link_to 'Edit', edit_log_path(@log), class: 'btn btn-primary' %>
    </div>
  </div>
</div>