<%= render 'partials/header' %>
<div class='container border p-4'>
  <div class='row'>
    <div class='col-md-12'> 
      <div class='d-flex'>
        <span class='date'>Created at: <%= @log.created_at.strftime("%B, %d, %Y") %></span>
        <% if @log.id %>
          <div class='ml-auto'>
            <div class="ml-auto input-group input-group-sm">
              <input type="text" value='<%= board_log_url(@board, @log) %>' class="form-control" id="public-link" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
              <div class="input-group-append">
                <span class="input-group-text btn copy-button tooltiped tooltipped-s" data-clipboard-target="#public-link" aria-label='copied!'>
                  <%= image_tag("clippy.svg", width: 15) %>
                </span>
              </div>
            </div>
          </div>
        <% end%>
      </div>
      <h1><%= @log.title %></h1>
      <main class='log-content'>
        <%= sanitize @log.text %>
      </main>
      <div class="mb-4">
        <% @log.tags.each do |tag| %>
          <div class="badge badge-primary"><%= tag.name %></div>
        <% end %>
      </div>
      <%= link_to 'Back to board', board_path(@board), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_board_log_path(@board, @log), class: 'btn btn-primary' %>
    </div>

    <div class='col-md-12'>
      <div class="accordion mt-3" id="accordionExample">
        <div class="card">
          <div class="card-header" id="headingOne">
            <h2 class="mb-0">
              <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Log information
              </button>
            </h2>
          </div>

          <div id="collapseOne" class="collapse hidden" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <span><strong>Created by:</strong> <%= @board.user.full_name %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>